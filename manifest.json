{
  "manifest_version": 3,
  "name": "Butlinn - Your Personal AI Butler",
  "version": "2.0",
  "description": "A private and secure AI that learns about you to provide a personalized experience.",
  
  "permissions": [
    "offscreen",
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "ui/popup/popup.html"
  },

  "background": {
    "service_worker": "service/background.js",
    "type": "module"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/Bimage.png",
        "ui/dashboard/assets/*" 
      ],
      "matches": [ "<all_urls>" ]
    }
  ],

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "features/tailor/recipient_finder.js",
        "features/tailor/relationship_manager.js", 
        "ui/content/content_script.js"
      ],
      "css": [
        "ui/content/content_script.css"
      ]
    }
  ],
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}